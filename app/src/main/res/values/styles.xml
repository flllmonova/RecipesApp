<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineHeight">@dimen/lineHeight24</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="StyleTitle14" parent="StyleTitle20">
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="lineHeight">@dimen/lineHeight16</item>
    </style>

    <style name="StyleTitle16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:lineHeight">@dimen/lineHeight16</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

    <style name="StyleDescription14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:lineHeight">@dimen/lineHeight17</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

    <style name="StyleCapsDescription14" parent="StyleDescription14">
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleDescription12" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/textSize12</item>
        <item name="android:lineHeight">@dimen/lineHeight16</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/padding20</item>
        <item name="android:paddingVertical">@dimen/padding10</item>
        <item name="cornerRadius">@dimen/buttonCornerRadius8</item>
        <item name="android:gravity">center</item>
    </style>
</resources>