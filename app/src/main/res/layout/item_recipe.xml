<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin16"
    android:layout_marginHorizontal="@dimen/margin8"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/cornerRadius8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRecipeItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipeImageHeight"
            android:contentDescription="@string/content_desc_banner_recipe"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvRecipeItemTitle"
            style="@style/StyleTitle14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding8" />

    </LinearLayout>

</androidx.cardview.widget.CardView>