<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundColor"
    tools:context=".CategoriesListFragment">

    <ImageView
        android:id="@+id/ivCategories"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:contentDescription="@string/content_desc_banner_categories"
        android:scaleType="centerCrop"
        android:src="@drawable/bcg_categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCategoriesTitle"
        style="@style/StyleTitle20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginBottom="@dimen/margin16"
        android:background="@drawable/shape_rounded_title"
        android:padding="@dimen/padding10"
        android:text="@string/title_categories"
        app:layout_constraintBottom_toBottomOf="@id/ivCategories"
        app:layout_constraintStart_toStartOf="@id/ivCategories" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCategories"
        app:spanCount="2" />

</androidx.constraintlayout.widget.ConstraintLayout>